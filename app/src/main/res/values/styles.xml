<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="TextViewAnswer">
        <item name="android:layout_width">@dimen/_32sdp</item>
        <item name="android:layout_height">@dimen/_32sdp</item>
        <item name="android:background">@drawable/ic_answer_button</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/museosans900</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:enabled">false</item>
        <item name="android:layout_marginStart">@dimen/_2sdp</item>
        <item name="android:layout_marginEnd">@dimen/_2sdp</item>
    </style>

    <style name="TextViewVariant">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="fontFamily">@font/museosans900</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@drawable/selector_variants</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="StyleContainerImages">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@drawable/shape_image</item>
        <item name="android:padding">@dimen/_6sdp</item>
    </style>

    <style name="StyleImages">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="StyleTextCoins">
        <item name="android:layout_marginTop">@dimen/_4sdp</item>
        <item name="android:layout_marginBottom">@dimen/_4sdp</item>
        <item name="android:layout_marginEnd">@dimen/_8sdp</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:fontFamily">@font/museosans900</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">@dimen/_8sdp</item>
        <item name="android:paddingEnd">@dimen/_8sdp</item>
        <item name="android:drawablePadding">@dimen/_8sdp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@drawable/shape_coin</item>
    </style>

    <style name="StyleIcon">
        <item name="android:layout_width">@dimen/_16sdp</item>
        <item name="android:layout_height">@dimen/_16sdp</item>
        <item name="android:layout_marginStart">@dimen/_8sdp</item>
    </style>

    <style name="StyleIconLeft" parent="StyleIcon">
        <item name="android:layout_marginEnd">@dimen/_8sdp</item>
    </style>

    <style name="StyleStartButton">
        <item name="android:shadowColor">#0C7600</item>
        <item name="android:shadowDx">1.6</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:shadowDy">1.6</item>
        <item name="android:shadowRadius">8</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/_48sdp</item>
        <item name="android:background">@drawable/selector_button_start</item>
        <item name="android:fontFamily">@font/museosans900</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_24ssp</item>
        <item name="android:layout_marginStart">@dimen/_24sdp</item>
        <item name="android:layout_marginEnd">@dimen/_24sdp</item>
    </style>

    <style name="StyleStartIcon">
        <item name="android:shadowColor">#0C7600</item>
        <item name="android:shadowDx">1.6</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:shadowDy">1.6</item>
        <item name="android:shadowRadius">8</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:background">@drawable/selector_button_start</item>
        <item name="android:fontFamily">@font/museosans900</item>
    </style>

    <!--style for ripple library-->
    <style name="RippleStyleWhite">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">#80FFFFFF</item>
        <item name="mrl_rippleHover">true</item>
        <item name="mrl_rippleAlpha">0.2</item>
    </style>

    <style name="WrapContentDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowMinWidthMajor">0%</item>
        <item name="windowMinWidthMinor">0%</item>
    </style>

</resources>